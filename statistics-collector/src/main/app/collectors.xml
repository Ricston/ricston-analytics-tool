<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" version="EE-3.5.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

    <sub-flow name="statistics-garbadge" doc:name="statistics-garbadge">
        <component doc:name="Garbadge" class="com.ricston.mule.statistics.GarbadgeCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="statistics-memory" doc:name="statistics-memory">
        <component doc:name="Memory" class="com.ricston.mule.statistics.MemoryCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="statistics-memory-pool" doc:name="statistics-memory-pool">
        <component doc:name="MemoryPool" class="com.ricston.mule.statistics.MemoryPoolCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="operating-system" doc:name="operating-system">
        <component doc:name="OperatingSystem" class="com.ricston.mule.statistics.OperatingSystemCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="thread" doc:name="thread">
        <component doc:name="Thread" class="com.ricston.mule.statistics.ThreadCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="flow" doc:name="flow">
        <component doc:name="Flow" class="com.ricston.mule.statistics.FlowCollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>
    
    <sub-flow name="kpi" doc:name="kpi">
        <component doc:name="KPI" class="com.ricston.mule.statistics.KPICollector" />
        <flow-ref name="elasticsearch-stats" doc:name="Elastic Search Upload"/>
    </sub-flow>

</mule>
